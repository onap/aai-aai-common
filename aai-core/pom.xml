                                </goals>
                                <configuration>
                                    <mainClass>org.onap.aai.util.swagger.GenerateSwagger</mainClass>
                                    <systemProperties>
                                        <property>
                                            <key>aai.generate.version</key>
                                            <value>${gendoc.version}</value>
                                        </property>
                                        <property>
                                            <key>aai.wiki.link</key>
                                            <value>${aai.wiki.link}</value>
                                        </property>
                                    </systemProperties>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
